// Write a function that takes two integers (hours, minutes), converts them to seconds, and adds them. (How many seconds are in an hour and in a minute?)

function convert(hours, minutes) {
   var hours = 3600;
   var minutes = 60;
   return hours + minutes;
   }
   
convert(1, 3) ➞ 3780
convert(2, 0) ➞ 7200
convert(0, 0) ➞ 0

/*  1 min = 60 secs;
    60 mins = 1 hour;
*/   
